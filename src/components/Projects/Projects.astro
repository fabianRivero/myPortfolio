    technologies: [
      {name:"HTML5", icon:"/html.svg"}, 
      {name:"CSS3", icon:"/css.svg"},
      {name:"JavaScript", icon:"/js.svg"},
      {name:"Express", icon:"/Express.svg"},
      {name:"NodeJS", icon:"/nodejs.svg"},
      {name:"MySQL", icon:"/mysql.svg"}
