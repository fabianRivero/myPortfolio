    {
      TECHNOLOGIES.filter((tech) => tech.categorie === "frontend") 
      .map((tech) => <Technology name={tech.name} icon={tech.icon} />)
    }
  </StackLayout>

  <StackLayout title="BACKEND">
    {
      TECHNOLOGIES.filter((tech) => tech.categorie === "backend") 
      .map((tech) => <Technology name={tech.name} icon={tech.icon} />)
    }
  </StackLayout>

  <StackLayout title="HERRAMIENTAS">
    {
      TECHNOLOGIES.filter((tech) => tech.categorie === "tools") 
      .map((tech) => <Technology name={tech.name} icon={tech.icon} />)
